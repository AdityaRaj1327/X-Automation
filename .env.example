# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/twitter_sessions

# Twitter Credentials
TWITTER_EMAIL=your_email@example.com
TWITTER_USERNAME=your_username
TWITTER_PASSWORD=your_password

# Proxy Configuration
# Set USE_PROXY=true to enable proxy, false to disable
USE_PROXY=false

# Proxy Details (required if USE_PROXY=true)
PROXY_HOST=proxy.example.com
PROXY_PORT=8080
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Optional: Proxy IP Rotation URL (if your proxy provider supports it)
PROXY_ROTATE_URL=https://api.proxyprovider.com/rotate
OPENROUTER_API_KEY=your_openrouter_api_key_here